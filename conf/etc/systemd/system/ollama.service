[Unit]
Description=Ollama Service
After=network-online.target

[Service]
ExecStart=/usr/local/bin/ollama serve
User=ollama
Group=ollama
Restart=always
RestartSec=3
#Environment=OLLAMA_HOST=0.0.0.0
# For which gcc version lower than 8
#Environment=LD_LIBRARY_PATH=/usr/local/lib/preload

[Install]
WantedBy=default.target
