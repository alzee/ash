sy(){
    case $1 in
        e)
            shift
            sudo systemctl enable --now "$@"
            ;;
        d)
            shift
            sudo systemctl disable --now "$@"
            ;;
        s)
            shift
            systemctl status "$@"
            ;;
        S)
            shift
            sudo systemctl stop "$@"
            ;;
        r)
            shift
            sudo systemctl restart "$@"
            ;;
        *)
            systemctl "$@"
            ;;

    esac
}

dockertag(){
    [ "$1" ] || return
    wget -q https://registry.hub.docker.com/v1/repositories/$1/tags -O -  | sed -e 's/[][]//g' -e 's/"//g' -e 's/ //g' | tr '}' '\n'  | awk -F: '{print $3}' | less
}

