#!/bin/bash
#
# vim:ft=sh

############### Variables ###############

############### Functions ###############

############### Main Part ###############

[ "$1" ] || exit

host=$1
. ~/.env.sec

case $host in
    gxb)
        databases="fgw fxkyss info_syzszz syzszz yunxi stamp"
        ;;
    kr)
        databases="alzee"
        ;;
esac

[ "$databases" ] && \
    ssh $host.$domain "mysqldump -uroot -p$mysql_root_pw --databases $databases > $host.sql"

dir=~/.backup/$host

mkdir -p $dir

# -avzRP no need -v and -P since it's in background
time rsync -avzRP \
    --exclude var/* \
    --delete \
    $host.$domain:w \
    :vhosts \
    :vhosts.conf \
    :cert \
    :.acme.sh \
    :.ssh \
    :$host.sql \
    $dir \
    2> $dir/err.log
