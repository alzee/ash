#!/bin/bash
#
# vim:ft=sh

############### Variables ###############

############### Functions ###############

############### Main Part ###############

host=10.5.5.1
dir=~/.backup/gxb

mkdir -p $dir

# -avzRP no need -v and -P since it's in background
time rsync -azR \
    --exclude var/* \
    --delete $host:gxb.sql $host:.acme.sh $host:cert $host:.ssh $host:w $host:vhosts $dir 2> $dir/err.log
