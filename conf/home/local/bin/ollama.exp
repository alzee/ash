#!/usr/bin/expect -f

# The system prompt you want
set system_prompt "/set system Always correct the user's grammar mistakes when responding, while ignoring capitalization or punctuation errors."

# Start the Ollama interactive session
spawn ollama run --hidethinking gemini-3-flash-preview:latest

# Wait a tiny bit for Ollama to be ready (optional, may adjust)
#sleep 0.2

# Send the system prompt
send "$system_prompt\r"

# Hand over control to the user (interactive)
interact
