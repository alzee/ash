#!/bin/bash
#
# vim:ft=sh

############### Variables ###############

############### Functions ###############
_help(){
    echo 'Usage: D <dest> [port]'
    echo 'ssh -N -T -D 0.0.0.0:port dest'
}

############### Main Part ###############

if [ -z "$1" ]; then
    _help
    exit
fi

port=1080
dest="$1"

[ "$2" ] && port=$2

screen -t D 5 ssh -N -T -D 0.0.0.0:$port $dest
screen -X other
