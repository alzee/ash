#!/bin/bash
#
# vim:ft=sh

############### Variables ###############

############### Functions ###############

############### Main Part ###############
# 'DP-4 connected 1920x1080+0+0 (normal left inverted right x axis y axis) 527mm x 296mm'
rotate=$(xrandr | grep -w connected | cut -f4 -d' ')

if [ "$rotate" = '(normal' ]; then
    rotate=$MONITOR_ROTATE
else
    rotate=normal
fi
echo to $rotate

xrandr --output $MONITOR --rotate $rotate
