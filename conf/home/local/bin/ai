############### Variables ###############

############### Functions ###############

############### Main Part ###############

hist=~/.ai_history

# see https://docs.ollama.com/cloud
# https://docs.ollama.com/quickstart#curl
# deepseek-v3.1:671b-cloud
# gpt-oss:20b-cloud
# gpt-oss:120b-cloud
# kimi-k2:1t-cloud
# qwen3-coder:480b-cloud
# qwen3-vl:235b-cloud
# glm-4.6:cloud
# qwen3-coder:30b
OLLAMA_MODEL=gemini-3-flash-preview:latest
# OLLAMA_MODEL=gemini-3-flash-preview:cloud

MODEL=${OLLAMA_MODEL:-gemini-3-pro-preview:latest}

echo User: >> $hist
echo "$@" >> $hist
date >> $hist
echo >> $hist
echo AI $MODEL: >> $hist

# ollama run $MODEL "$@" | tee -a $hist
#ollama run $MODEL ${@:+"$@"}
# script -q -e -f -a $hist -c "ollama run $MODEL"
ollama run $MODEL "$@"
